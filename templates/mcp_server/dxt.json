{
  "name": "mcp-server-template",
  "version": "0.1.0",
  "description": "Template for MCP server implementations",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "python": {
    "version": ">=3.9,<3.12",
    "dependencies": [
      "fastapi>=0.68.0,<0.69.0",
      "uvicorn[standard]>=0.15.0,<0.16.0",
      "pydantic>=1.8.0,<2.0.0",
      "python-dotenv>=0.19.0,<0.20.0"
    ],
    "entry_point": "mcp_server.__main__:main",
    "package_dir": "src"
  },
  "files": [
    "src/mcp_server/**/*.py",
    "README.md",
    "LICENSE"
  ],
  "exclude": [
    "**/__pycache__",
    "**/*.pyc",
    "**/.pytest_cache",
    "**/.mypy_cache",
    ".venv",
    "venv",
    "dist",
    "build"
  ],
  "scripts": {
    "start": "python -m mcp_server",
    "test": "pytest tests/ -v",
    "lint": "flake8 src/ tests/"
  },
  "metadata": {
    "mcp_version": "2.13.0",
    "supported_platforms": ["windows", "linux", "macos"],
    "tags": ["mcp", "server", "template"],
    "documentation": "https://github.com/yourorg/mcp-server-template"
  },
  "build": {
    "before_build": [
      "python -m pip install --upgrade pip",
      "pip install -e .[test]"
    ],
    "after_build": [
      "pytest"
    ]
  }
}
